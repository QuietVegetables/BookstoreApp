<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Bookstore - Books</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Bookstore App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if (!user) { %>
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
          <% } else { %>
            <% if (user.role === "admin") { %>
              <li class="nav-item"><a class="nav-link" href="/inventory">Inventory</a></li>
              <li class="nav-item"><a class="nav-link" href="/addBook">Add Book</a></li>
            <% } %>
            <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <h2 class="text-center mb-4">
      <% if (book) { %>
        Book Details
      <% } else { %>
        All Available Books
      <% } %>
    </h2>

    <% if (book) { %>
      <div class="card p-4 mx-auto" style="max-width: 600px;">
        <img src="/images/<%= book.image %>" class="card-img-top mb-3" alt="<%= book.bookName %>">
        <div class="card-body">
          <h5 class="card-title"><%= book.bookName %></h5>
          <p class="card-text">Price: $<%= book.price.toFixed(2) %></p>
          <p class="card-text">Stock: <%= book.quantity %></p>
          <% if (user.role === "admin") { %>
            <a href="/inventory" class="btn btn-secondary">Back to Inventory</a>
          <% } else { %>
            <a href="/shopping" class="btn btn-secondary">Back to Shopping</a>
          <% } %>
        </div>
      </div>
    <% } else if (books.length === 0) { %>
      <p class="text-center">No books found.</p>
    <% } else { %>
      <div class="row">
        <% books.forEach(book => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img src="/images/<%= book.image %>" class="card-img-top" alt="<%= book.bookName %>">
              <div class="card-body">
                <h5 class="card-title"><%= book.bookName %></h5>
                <p class="card-text">Price: $<%= book.price.toFixed(2) %></p>
                <p class="card-text">Stock: <%= book.quantity %></p>
                <a href="/books/<%= book.bookId %>" class="btn btn-primary btn-sm">View</a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
