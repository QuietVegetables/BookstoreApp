<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Bookstore App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Bookstore App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addBook">Add Book</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
             data-bs-toggle="dropdown" aria-expanded="false">
            Categories
          </a>
          <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdownMenuLink">
            <li><a class="dropdown-item" href="/admin/search?category=Fiction">Fiction</a></li>
            <li><a class="dropdown-item" href="/admin/search?category=Educational">Educational</a></li>
            <li><a class="dropdown-item" href="/admin/search?category=Children">Children</a></li>
          </ul>
        </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Books Database</h2></div>
    <br>

    <!-- Search -->
    <form action="/admin/search" method="GET" class="mb-4">
      <div class="input-group">
        <input type="text" class="form-control" name="q" placeholder="Search books..." required>
        <button class="btn btn-primary" type="submit">Search</button>
      </div>
    </form>

    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Book Title</th>
            <th width="100">Cover</th>
            <th width="100">Category</th>
            <th width="50">Quantity</th>
            <th width="50">Price</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < books.length; i++) { %>
          <tr>
            <td><a href="/book/<%= books[i].bookId %>" ><%= books[i].bookName %></a></td>
            <td><img src = "/images/<%= books[i].image %>" width="20%"></td>
            <td><%= books[i].category %></td>
            <td><%= books[i].quantity %></td>
            <td>$<%= books[i].price.toFixed(2) %></td>
            <!-- Edit Link -->
            <td><a href="/updateBook/<%= books[i].bookId %>">Edit</a></td>
            <!-- Delete Link -->
            <td><a href="/deleteBook/<%= books[i].bookId %>" onclick="return confirm('Are you sure you want to delete this book?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
