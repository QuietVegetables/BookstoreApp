<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Bookstore App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Bookstore App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/cart">View Cart</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>Books from Bookstore</h2></div>
    <br>

    <!-- Search -->
    <form action="/user/search" method="GET" class="mb-4">
      <div class="input-group">
        <input type="text" class="form-control" name="q" placeholder="Search books..." required>
        <button class="btn btn-primary" type="submit">Search</button>
      </div>
    </form>

    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th>Book Name</th>
            <th>Book Image</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Category</th>
            <th>Select Quantity</th> <!-- NEW -->
            <th>Buy</th>
          </tr>

      </thead>
      <tbody>
        <% for(let i=0; i < books.length; i++) { %>
          <tr>
            <td><a href="/book/<%= books[i].bookId %>" ><%= books[i].bookName %></a></td>
            <td><img src = "/images/<%= books[i].image %>" width="20%"></td>
            <td><%= books[i].quantity %></td>
            <td>$<%= books[i].price.toFixed(2) %></td>
            <td><%= books[i].category %></td>
            <!-- <td>
              <select id="role" name="role" class="form-control" >
                <option value="1" selected >1</option>
                <option value="2" >2</option>
                <option value="3" >3</option>
                <option value="4" >4</option>
                <option value="5" >5</option>
              </select>
            </td> -->
            <!-- Buy Link -->
            <!-- <td><a href="/buyBook/<%#= books[i].bookId %>" class="btn btn-primary mt-3">Buy</a></td> -->
            <td>
              <select class="form-control" onchange="document.getElementById('quantity-<%= books[i].bookId %>').value = this.value">
                <% for (let q = 1; q <= 5; q++) { %>
                  <option value="<%= q %>"><%= q %></option>
                <% } %>
              </select>
            </td>

            <td>
              <form action="/add-to-cart/<%= books[i].bookId %>" method="POST">
                <select name="quantity" class="form-control mb-2">
                  <% for (let q = 1; q <= 5; q++) { %>
                    <option value="<%= q %>"><%= q %></option>
                  <% } %>
                </select>
                <button type="submit" class="btn btn-primary">Buy</button>
              </form>
            </td>

          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
